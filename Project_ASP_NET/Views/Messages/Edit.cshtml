<div class="d-flex justify-content-center", style="align-self:center;">
    <form method="post" action="/Messages/Edit/@ViewBag.Message.Id" class="card w-50">
        <div class="card-body">
            <div class="mb-3">
                <label for="name" class="form-label">Continut</label>
                <input type="text" class="form-control" name="Content" value="@ViewBag.Message.Content">
            </div>

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-success">Editeaza mesaj</button>
            </div>
        </div>
    </form>
</div>
